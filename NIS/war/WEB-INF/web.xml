<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<jsp-config>
    <jsp-property-group>
        <url-pattern>*.jsp</url-pattern>
        <el-ignored>false</el-ignored>
    </jsp-property-group>
	</jsp-config>
	
	<servlet>
		<servlet-name>NIS</servlet-name>
		<servlet-class>nisq.NISServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>NIS</servlet-name>
		<url-pattern>/nis</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Ajout</servlet-name>
		<servlet-class>nisq.AjoutActivServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Ajout</servlet-name>
		<url-pattern>/ajout</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>indexNis.html</welcome-file>
	</welcome-file-list>
	
<filter>
        <filter-name>ObjectifyFilter</filter-name>
        <filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
</filter>
<filter-mapping>
        <filter-name>ObjectifyFilter</filter-name>
        <url-pattern>/*</url-pattern>
</filter-mapping>
	
	<security-constraint>
    <web-resource-collection>
        <url-pattern>/membre/*</url-pattern>
        
    </web-resource-collection>
    <auth-constraint>
        <role-name>*</role-name>
    </auth-constraint>
</security-constraint>
</web-app>
